<%- include('layout', { body: `
    <div class="withdraw-container">
        <!-- Balance Card -->
        <div class="balance-card">
            <h1 class="card-title">Withdraw Funds</h1>
            <div class="balance-info">
                <span class="balance-label">Your balance:</span>
                <span class="balance-amount" id="userBalance">$0.00</span>
            </div>
        </div>

        <!-- Message Display Card -->
        <div class="message-card" id="messageCard" style="display: none;">
            <div class="message-content" id="messageContent">
                <i class="message-icon" id="messageIcon"></i>
                <div class="message-text">
                    <h3 class="message-title" id="messageTitle"></h3>
                    <p class="message-description" id="messageDescription"></p>
                </div>
            </div>
        </div>

        <!-- Withdraw Form Card -->
        <div class="withdraw-form-card">
            <div class="form-group">
                <label for="amount" class="input-label">Enter Amount (USDT)</label>
                <input 
                    type="number" 
                    id="amount" 
                    name="amount" 
                    class="input-field" 
                    placeholder="0.00"
                    min="0"
                    step="0.01"
                    required
                >
            </div>

            <div class="form-group">
                <label for="walletAddress" class="input-label">USDT (ERC20) Wallet Address</label>
                <input 
                    type="text" 
                    id="walletAddress" 
                    name="walletAddress" 
                    class="input-field" 
                    placeholder="Enter USDT (ERC20) Wallet Address"
                    required
                >
            </div>

            <div class="button-container">
                <button type="button" class="withdraw-button" id="withdrawBtn">
                    Withdraw
                </button>
            </div>
        </div>

        <!-- History Card -->
        <div class="history-card">
            <h2 class="card-title">Withdrawal History</h2>
            <div class="history-content" id="withdrawalHistory">
                <div class="no-history">
                    <i class="fas fa-history"></i>
                    <p>No withdrawal history available</p>
                </div>
            </div>
        </div>
    </div>
` }) %>