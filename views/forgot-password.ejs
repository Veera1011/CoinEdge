<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - CoinEdge</title>
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon/favicon.ico">
    <!-- Bootstrap CSS
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> -->
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/login.css" rel="stylesheet">
    <link href="/css/popup.css" rel="stylesheet">
    <link href="/css/loader.css" rel="stylesheet">
    <link href="/css/sweetalert.css" rel="stylesheet">
     <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
</head>
<body class="login-body">
    <!-- Forgot Password Container -->
    <div class="login-container">
        <div class="login-card">
            <!-- Logo Section -->
            <div class="login-header">
                <div class="logo-container">
                    <img src="/assets/logo/CoinEdgeLogo.png" alt="CoinEdge Logo" class="login-logo">
                </div>
                <h1 class="login-title">Reset Password</h1>
                <p class="login-subtitle">Enter your email to receive reset instructions</p>
            </div>

            <!-- Forgot Password Form -->
            <form class="login-form" id="forgotPasswordForm" autocomplete="off">
                <!-- Email Field -->
                <div class="form-group">
                    <div class="input-container">
                        <input type="email" id="email" name="email" class="form-input" autocomplete="email" required>
                        <label for="email" class="input-label">Email Address</label>
                    </div>
                </div>

                <!-- Send Reset Button -->
                <button type="submit" class="signin-btn" id="sendResetBtn">
                    <span class="btn-text">Send Reset Link</span>
                </button>

                <!-- Back to Login -->
                <div class="forgot-password">
                    <a href="/auth/login" class="forgot-link">
                        <i class="fas fa-sign-in" style="margin-right: 6px;"></i>
                        Back to Login
                    </a>
                </div>

                <!-- Divider -->
                <div class="divider">
                    <span class="divider-text">Don't have an account?</span>
                </div>

                <!-- Register Button -->
                <button type="button" class="register-Btn" id="registerBtn">
                    <span>Register Here</span>
                </button>

                  <!-- Home Button -->
                        <div class="forgot-password">
                            <a href="/" class="forgot-link" id="homeLink">
                                <i class="fas fa-home" style="margin-right: 6px;"></i>
                                Back to Home
                            </a>
                        </div>
            </form>
        </div>
    </div>

    <!-- Loader -->
    <!-- <div class="loader-overlay" id="pageLoader" style="display: none;">
        <div class="loader-container">
            <div class="loader"></div>
            <div class="loader-text">Sending Reset Link...</div>
        </div>
    </div> -->

    <!-- Popup -->
    <div id="popupOverlay" class="popup-overlay" style="display: none;">
        <div class="popup">
            <i class="popup-icon" id="popupIcon"></i>
            <div class="popup-title" id="popupTitle"></div>
            <div class="popup-message" id="popupMessage"></div>
            <button class="popup-button" id="popupButton">OK</button>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> -->
    <!-- Custom JS -->
    <script src="/js/forgot-password.js"></script>
     <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/main.js"></script>
</body>
</html>