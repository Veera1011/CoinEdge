<%- include('layout', { body: ` <div class="container">
    <div class="text-center">
        <h1>Customer Care</h1>
        <p class="lead">If you have any questions or concerns, feel free to reach out to us.</p>
    </div>

    <!-- Contact Info Section -->
    <div class="card">
        <h5>How do I contact customer support?</h5>
        <p>You can reach out to us through Telegram: <a href="https://t.me/yourtelegram" target="_blank">Contact
                Customer Care</a></p>
        <h5>What is your response time?</h5>
        <p>We usually respond within 24 hours.</p>
    </div>

    <!-- Contact Form Section -->
    <div class="card">
        <h5>Contact Form</h5>
        <form id="contactForm">
            <div>
                <label for="name">Your Name</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div>
                <label for="email">Your Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div>
                <label for="message">Your Message</label>
                <textarea id="message" name="message" rows="4" required></textarea>
            </div>
            <button type="submit">Send Message</button>
        </form>
        <div id="formResponse"></div>
    </div>
    </div>

    <script>
        document.getElementById('contactForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const form = e.target;
            const formData = {
                name: form.name.value,
                email: form.email.value,
                message: form.message.value
            };

            const responseDiv = document.getElementById('formResponse');
            responseDiv.innerHTML = 'Sending...';

            try {
                const res = await fetch('/user/contact', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await res.json();

                if (data.success) {
                    responseDiv.innerHTML = '<div class="alert alert-success"><h6>Successfully Sent</h6></div>';
                    form.reset();
                } else {
                    responseDiv.innerHTML = '<div class="alert alert-danger"><h6>Something went wrong</h6></div>';
                }
            } catch (err) {
                responseDiv.innerHTML = '<div class="alert alert-danger">Something went wrong. Please try again.</div>';
            }
        });
    </script>
    <link rel="stylesheet" href="/css/customer-care.css">
    ` }) %>